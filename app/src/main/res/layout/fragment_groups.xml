                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                custom:contentPadding="5dp"

                android:layout_below="@id/cl_group_c" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
