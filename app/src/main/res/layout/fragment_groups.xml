                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_group_d"
                        android:textSize="18sp"
                        android:layout_marginBottom="3dp"
                        android:text="@string/group_d"/>

                    <include layout="@layout/list_item_group"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/tv_group_row_d"/>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/listView_groupD"
                        android:layout_gravity="center_horizontal"
                        tools:ignore="NestedScrolling" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- -->


            <android.support.v7.widget.CardView
                android:id="@+id/cl_group_e"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:cardCornerRadius="4dp"
                custom:cardElevation="@dimen/cardview_default_elevation"
                custom:cardBackgroundColor="#aaffffff"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                custom:contentPadding="5dp"

                android:layout_below="@id/cl_group_d" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
