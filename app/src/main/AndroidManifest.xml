<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.hugoandrade.euro2016.backend">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_euro_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/AppTheme.Filter"
            android:name=".view.EditSystemDataActivity"
            android:configChanges="orientation|screenSize" />

        <service android:name=".model.service.MobileService" android:enabled="true"/>

        <provider
            android:name=".cloudsim.CloudDatabaseSimProvider"
            android:authorities="org.hugoandrade.euro_2016.sim_provider"
            android:exported="true"
            android:multiprocess="true"
            tools:ignore="ExportedContentProvider" />
    </application>

</manifest>