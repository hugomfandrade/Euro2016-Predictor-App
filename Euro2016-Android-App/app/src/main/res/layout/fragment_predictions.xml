<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    
    <LinearLayout
        android:id="@+id/viewGroup_prediction_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaffffff"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_filter_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#26629e"
            android:src="@drawable/ic_chevron_start"/>
        
        <TextView
            android:id="@+id/tv_filter_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#26629e"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            tools:text="Matchday 1"/>

        <ImageView
            android:id="@+id/iv_filter_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#26629e"
            android:src="@drawable/ic_chevron_end" />

    </LinearLayout>
    
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/viewGroup_prediction_header"
        android:id="@+id/rv_predictions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:descendantFocusability="afterDescendants"/>
</RelativeLayout>